@using Web.ViewModels.Shared
@model PaginationViewModel<OrderViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ShippingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().WarehouseId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WarehouseId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    await Html.RenderPartialAsync("_Pagination", Model.Infos);
}